{{!-- create blog --}}
{{!-- sign in or sign up prompt --}}
<div class="jumbotron jumbotron-fluid text-center">
  <div class="container">
    <h1 class="display-4">Sign up or Log in with us today!</h1>
    <p class="lead">Sign up or Log in to start creating or commenting on Blogs from fellow users!</p>
  </div>
</div>
  {{#each blogs as |blog|}}
<div id="blogwrap" class="d-flex flex-wrap justify-content-center row row-cols-sm-2 row-cols-md-3 m-3 g-4">
  <div class="col">
    <div class="card h-100">
      <div class="card-body">
        <h2 class="card-title">{{blog.title}}</h2>
        <p class="card-text" id="blogCopy-{{blog.id}}"></p>
         <a href="/blogs/{{blog.id}}" id="viewBlog-{{blog.id}}" class="btn btn-warning" role="button" data-bs-toggle="button">READ MORE</a>
      </div>
      <div class="card-footer">
        <small class="text-muted">{{blog.date_created}}</small>
      </div>
    </div>
  </div>
</div>
  {{/each}}